extends layout

block content
  main#book-form
    h2= title
    if(errors)
        h2.error Oops an error occurred!
            ul.error
        each error in errors
            li.newError
                =error.message
    form(action="/books", method="post")
      include form
      input(type="submit", value="Add Book")
      a#cancel(href="/books") Cancel